<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/dash01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@color/transparent" />

        <ImageView
            android:id="@+id/dash02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@color/blue" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/socialContainer"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/transparent"
        android:foreground="@drawable/nm_bg"
        android:gravity="start"
        android:hint="@string/notification_message"
        android:text="dfgdfdfdfgdfgdfg"
        android:textColor="@color/blue"
        android:textColorHint="@color/grey"
        app:backgroundTint="@color/transparent" />




    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="115sp"
        android:layout_height="115sp"
        android:src="@drawable/user_profile_icon"
        android:id="@+id/profile_image_drawer"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/profile_image_drawer"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:id="@+id/playerName_drawer"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Nares"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerName_drawer"
        android:id="@+id/location_drawer"
        android:textSize="14sp"
        android:layout_marginTop="5sp"
        android:text="hjdhfjdjfhjd"
        android:gravity="center"
        android:textColor="@color/cyan_400"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/sepline_drawer"
        android:layout_below="@+id/location_drawer"
        android:layout_marginTop="8sp"
        android:src="@color/grey"/>


</RelativeLayout>